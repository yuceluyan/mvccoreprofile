@model MyLinkedInProfile.Model.EducationModel
@using Microsoft.AspNetCore.Http;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
    <style>
        .sablon {
            width: 740px;
            height: auto;
            margin: 30px auto
        }

        .foto {
            width: 90px;
            height: 100px;
            float: left;
            background: #003466;
            border-radius: 10px;
            color: #fff;
            font: bold 15px tahoma;
            text-align: center;
            margin: 0 0 0 5px;
        }

        .banner {
            width: 630px;
            height: 60px;
            margin: 0 0 0 10px;
            float: left;
            background: #003466;
            border-radius: 10px;
            color: #fff;
            font: bold 15px tahoma;
            text-align: center;
            padding: 40px 0 0 0
        }

        .menu {
            width: 740px;
            height: 47px;
            float: left;
            margin: 10px 0 0 0;
            background: #00468c
        }

        .sosyal {
            width: 150px;
            height: 47px;
            float: left;
            margin: 10px 0 0 10px
        }

        .egitim {
            color: #fff;
            font: bold 30px tahoma;
            text-align: center;
        }

        .okul {
            color: #fff;
            font: bold 20px tahoma;
        }

        .orta1 {
            width: 740px;
            height: 350px;
            float: left;
            margin: 10px 0 10px 0;
            background: #016dd9
        }

        .orta2 {
            width: 240px;
            height: 240px;
            float: left;
            background: #4da6ff
        }

        .orta3 {
            width: 240px;
            height: 240px;
            float: left;
            margin: 0 0 0 10px;
            background: #99cdff
        }

        .orta4 {
            width: 240px;
            height: 240px;
            float: left;
            margin: 0 0 0 10px;
            background: #bedffe
        }

        .alt {
            width: 740px;
            height: 90px;
            float: left;
            margin: 10px 0 0 0;
            background: #bfeefe;
            border-radius: 10px
        }

        .standartbtn {
            width: 160px;
            margin: 20px 340px;
            text-align: center;
        }

        .menu ul {
            margin: 0;
            padding: 0;
            list-style: none
        }

            .menu ul li {
                float: left
            }

                .menu ul li a {
                    display: block;
                    width: 145px;
                    height: 32px;
                    text-decoration: none;
                    text-align: center;
                    font: 13px tahoma;
                    color: #fff;
                    padding: 15px 0 0 0
                }

                    .menu ul li a:hover {
                        text-decoration: underline;
                        background: #06f;
                    }
    </style>
</head>
<body>
    <form action="/Home/ProfileAddOrEdit" method="post">
        <div class="sablon">
            <div class="foto">FOTO</div>
            <div class="banner">@Context.Session.GetString("UserName")</div>
            <div class="menu">
                <ul>
                    <li><a href="">Profil</a></li>
                    <li><a href="">Bağlantılar</a></li>
                    <li><a href="">Fotoraflar</a></li>
                    <li><a href="">İletişim</a></li>
                    <li><a href="">Kariyer</a></li>
                </ul>
            </div>

            <div class="orta1">
                <table border=2 bordercolor="White" width="740px">
                    <tr>
                        <td colspan="2" width="100" class="egitim">Eğitim</td>
                    </tr>
                    <tr>
                        <td class="okul">Lise</td>
                        <td>
                            @Html.TextBoxFor(x => x.HighScool)
                        </td>
                    </tr>
                    <tr>
                        <td class="okul">Üniversite</td>
                        <td>
                            @Html.TextBoxFor(x => x.University)
                        </td>
                    </tr>
                    <tr>
                        <td class="okul">Yüksek Lisans</td>
                        <td>
                            @Html.TextBoxFor(x => x.Master)
                        </td>
                    </tr>
                </table>
                <button class="standartbtn">Kaydet</button>
            </div>
            <div class="orta2"></div>
            <div class="orta3"></div>
            <div class="orta4"></div>
            <div class="alt"></div>
        </div>
    </form>
</body>
</html>
